.lodging
    & > .lodging-image
        height: 450px
        background-image: url("http://placekitten.com/700/500")
        background-size: cover
    
    & > .lodging-description
        padding-top: 2em
        
    & > .lodging-amenities
        & > ul
            & .glyphicon
                font-size: 1.5em
                margin-right: 1em
            & > li > span
                position: absolute
                left: 4em