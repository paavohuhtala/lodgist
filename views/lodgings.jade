extends layout.jade

include mixins/lodging
include mixins/amenity_selector

block vars
    - controller = "LodgingsController"

block content
    .search-bar: .container
        form.form.row
            .form-group.col-sm-3: input.form-control(type="text" placeholder="Nimi, myyjä tai sijainti" ng-model="search.query" ng-model-options="searchOptions" ng-change="onSearch()")
            .form-group.col-sm-2: input.form-control(type="text" placeholder="Saapuminen" ng-model="search.from" bs-datepicker ng-model-options="searchOptions")
            .form-group.col-sm-2: input.form-control(type="text" placeholder="Lähtö" ng-model="search.to" bs-datepicker ng-model-options="searchOptions")
            .form-group.col-sm-4: button.form-control.amenity-selector(ng-model="search.amenities" placeholder="Valitse varusteet" max-length="2" max-length-html="valittu" bs-select data-multiple="1" bs-options="amenity.id as amenity.name for amenity in amenities" ng-change="onSearch()" ng-model-options="searchOptions")
    .container.lodgings-wrapper
        .col-md-12.lodgings(ng-if="!dynamicLodgings")
            .progress: .progress-bar.progress-bar-striped.active(style="width: 100%")
        .col-md-12.lodgings(ng-if="dynamicLodgings")
            .lodging.row(ng-repeat="lodging in dynamicLodgings track by lodging.id")
                a.lodging-image.col-md-3(ng-href="/lodgings/{{lodging.id}}")             
                .lodging-content.col-md-7
                    a(ng-href="/lodgings/{{lodging.id}}").lodging-title {{lodging.name}}
                    p.lodging-address {{lodging.city}} | {{lodging.company_name}}
                    p {{lodging.description}}
                .lodging-pricing.col-md-2
                    p.lodging-price {{lodging.price_per_night | currency}} / yö