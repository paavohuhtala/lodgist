extends layout.jade

block content
    #login-panel
        .col-sm-6
            h3 Already have an account?
            form#login-form
                .form-group: input.form-control#email(type="email" placeholder="Email" required)
                .form-group: input.form-control#password(type="password" placeholder="Password" required)
                button.btn.btn-primary.bottom-sm Login
        .col-sm-6
            h3 Not registered yet?
            p It only takes a minute.
            a.btn.btn-primary.bottom-sm(href="/register") Register